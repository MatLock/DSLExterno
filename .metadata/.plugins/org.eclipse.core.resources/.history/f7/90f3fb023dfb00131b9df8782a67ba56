grammar org.xtext.example.mydsl.MyDsl with org.eclipse.xtext.xbase.Xbase
generate myDsl "http://www.xtext.org/example/mydsl/MyDsl"

Model:
	(clases+=Clase)*;
	
Clase:
	Profesor | Materia | Aula | Planificacion | Horario | Asignacion
;

Horario:
	'de:' horarioInicio = INT 'hasta:' horarioFin=  INT 'en:' aula =ID type= [Aula] //aulas	
;

Profesor:
 'profesor:' nombre= ID 'dedicacion:' dedicacion =  Dedicacion
;

Materia:
    'materia' nombre = ID '{'
	'cantidadDeDias:' cantidadDeDias= INT
	'cargaHoraria:' cargaHoraria= INT
	'dictadaPor:' dictadaPor= ID type= [Profesor]  //profesor
'}' 
;
Aula:
    'aula:' idAula= INT'{'
	'recursos:' recursos += Recursos ';'
  '}'
;

Planificacion:
	'planificacion:' anio= INT 'semestre:' semestre= INT'{'
	'aDictar:' (materias+= ID type= [Materia]) //materias
	 asignaciones += Asignacion
  '}'
;

Asignacion:
	 dia= Dia '{' 	
 	 horario = Horario	'se dicta la materia:' materia = ID type= [Materia] //materias
  '}'
;   

enum Dedicacion:
	Simple | Semi | Exclusiva
;

enum Recursos:
	Internet | Proyector | MaquinasParaAlumnos | MaquinaParaElProfesor
;

enum Dia:
	Lunes | Martes | Miercoles | Jueves | Viernes | Sabados
;

/*
 * def materiaADar(Dedicacion d)
 * switch d{
 * 	case Simple: bla
 *  case Semi: bla2
 */