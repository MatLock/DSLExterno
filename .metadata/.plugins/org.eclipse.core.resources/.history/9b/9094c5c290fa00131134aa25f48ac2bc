grammar org.xtext.example.mydsl.MyDsl with org.eclipse.xtext.xbase.Xbase
generate myDsl "http://www.xtext.org/example/mydsl/MyDsl"

Model:
	(clases+=Clase)*;
	
Clase:
//	'Hello' name=ID '!'
	Profesor | Materia | Aula | Planificacion 
;

NumeroDeAula:
	'numeroDeAula:' numero = INT 
;

CantidadDeDias:
	'CantidadDeDias:' dias = INT	
;

Horarios:
	'de:' horarioInicion = INT 'hasta:' horarionFin=  INT 'en:' aula = JvmTypeReference
	
;

Profesor:
 'profesor' nombre= STRING 'dedicacion:' dedicacion =  Dedicacion
;

Materia:
	{Materia}
  'materia' nombre = STRING '{'
	'CantidadDeDias:' cantidadDeDias= INT
	'CargaHoraria:' cargaHoraria= INT
'}' 
;
Aula:
	{Aula}
  'aula' idAula= INT'{'
	'recursos' recursos += Recursos ';'
  '}'
;

Planificacion:
	{Planificacion}
	'planificacion:' anio= INT 'semestre:' semestre= INT'{'
	'aDictar:' (materias+=Materia)* 
	'asignar :' (asignaciones += Asignaciones)*
  '}'
;

Asignaciones:
	'dia:' dia= Dia '{' 	
 	 horario = Horarios	'se dicta la materia:' materia = JvmTypeReference 
  '}'
;   

enum Dedicacion:
	Simple | Semi | Exclusiva
;

enum Recursos:
	Internet | Proyector | MaquinasParaAlumnos | MaquinaParaElProfesor
;

enum Dia:
	Lunes | Martes | Miercoles | Jueves | Viernes | Sabados
;