grammar org.xtext.example.mydsl.MyDsl with org.eclipse.xtext.xbase.Xbase
generate myDsl "http://www.xtext.org/example/mydsl/MyDsl"

Model:
	(clases+=Clase)*;
	
Clase:
//	'Hello' name=ID '!'
	Profesor | Materia | Aula | Planificacion | Horario | Asignacion
;

Horario:
	'de:' horarioInicio = ID 'hasta:' horarioFin=  INT 'en:' aula = JvmTypeReference //aulas
	
;

Profesor:
 'profesor:' nombre= STRING 'dedicacion:' dedicacion =  Dedicacion
;

Materia:
	{Materia}
  'materia' nombre = STRING '{'
	'cantidadDeDias:' cantidadDeDias= INT
	'cargaHoraria:' cargaHoraria= INT
	'dictadaPor:' dictadaPor = JvmTypeReference //profesor
'}' 
;
Aula:
	{Aula}
    'aula:' idAula= INT'{'
	'recursos:' recursos += Recursos ';'
  '}'
;

Planificacion:
	{Planificacion}
	'planificacion:' anio= INT 'semestre:' semestre= INT'{'
	'aDictar:' materias+= JvmTypeReference //materias
	 asignaciones += Asignacion
  '}'
;

Asignacion:
	 dia= Dia '{' 	
 	 horario = Horarios	'se dicta la materia:' materia = JvmTypeReference //materias
  '}'
;   

enum Dedicacion:
	Simple | Semi | Exclusiva
;

enum Recursos:
	Internet | Proyector | MaquinasParaAlumnos | MaquinaParaElProfesor
;

enum Dia:
	Lunes | Martes | Miercoles | Jueves | Viernes | Sabados
;